{
  "name": "@congress/api",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint --flag unstable_native_nodejs_ts_config",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@congress/auth": "workspace:*",
    "@congress/db": "workspace:*",
    "@congress/transactional": "workspace:^",
    "@congress/validators": "workspace:*",
    "@trpc/server": "catalog:",
    "superjson": "2.2.3",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@congress/eslint-config": "workspace:*",
    "@congress/prettier-config": "workspace:*",
    "@congress/tsconfig": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@congress/prettier-config"
}
